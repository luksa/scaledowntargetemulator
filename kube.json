{
  "id": "scaledown-pod",
  "kind": "Pod",
  "apiVersion": "v1beta2",
  "namespace": "mluksa",
  "labels": {
    "component": "scaledown-pod"
  },
  "desiredState": {
    "manifest": {
      "version": "v1beta2",
      "id": "scaledown-pod",
      "labels": [
        {
          "component": "scaledown-pod"
        }
      ],
      "containers": [
        {
          "name": "scaledown-container",
          "image": "docker.io/luksa/scaledowntargetemulator",
          "lifecycle": {
            "preStop": {
              "httpGet": {
                "path": "/preStop",
                "port": 8080
              }
            }
          }
        }
      ]
    }
  }
}
